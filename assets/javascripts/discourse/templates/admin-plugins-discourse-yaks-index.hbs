<section class="admin-yaks">
  <h2>{{i18n "yaks.admin.title"}}</h2>

  <div class="admin-yaks-stats">
    <h3>System Statistics</h3>

    <div class="stat-grid">
      <div class="stat-item">
        <label>Total Wallets:</label>
        <span>{{this.model.total_wallets}}</span>
      </div>

      <div class="stat-item">
        <label>Total Transactions:</label>
        <span>{{this.model.total_transactions}}</span>
      </div>

      <div class="stat-item">
        <label>Yaks in Circulation:</label>
        <span>{{this.model.total_yaks_in_circulation}}</span>
      </div>

      <div class="stat-item">
        <label>Total Earned:</label>
        <span>{{this.model.total_yaks_earned}}</span>
      </div>

      <div class="stat-item">
        <label>Total Spent:</label>
        <span>{{this.model.total_yaks_spent}}</span>
      </div>

      <div class="stat-item">
        <label>Feature Uses:</label>
        <span>{{this.model.total_feature_uses}}</span>
      </div>

      <div class="stat-item">
        <label>Active Features:</label>
        <span>{{this.model.active_feature_uses}}</span>
      </div>
    </div>
  </div>

  <div class="admin-yaks-recent">
    <h3>Recent Transactions</h3>

    {{#if this.model.recent_transactions}}
      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Amount</th>
            <th>Type</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.model.recent_transactions as |tx|}}
            <tr>
              <td>{{tx.username}}</td>
              <td class={{if (gt tx.amount 0) "positive" "negative"}}>
                {{tx.amount}}
              </td>
              <td>{{tx.type}}</td>
              <td>{{format-date tx.created_at}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p>No recent transactions.</p>
    {{/if}}
  </div>
</section>
